<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="button_style">
        <item name="android:textSize">40.0dip</item>
        <item name="android:layout_marginLeft">1.0dip</item>
        <item name="android:layout_marginTop">1.0dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height"> match_parent</item>
    </style>

    <style name="button_digit" parent="@style/button_style">
        <item name="android:background">@drawable/button_digit</item>
        <item name="android:textColor">#262626</item>
    </style>

    <style name="button_function" parent="@style/button_style">
        <item name="android:background">@drawable/button_function</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="display_style">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#000000</item>
        <item name="android:gravity">right|center</item>
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingTop">8.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
        <item name="android:paddingBottom">0.0dip</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

</resources>